<div class="container max-width">
    <div class="section">
    <div class="row">
      <div class="col s12 valign-wrapper">

                <div class="col s4 m2"><%=image_tag @user.avatar, class:"circle responsive-img", style:"width:80px; height:80px;" %></div>
                <div class="col s8 m10">
                  <span class="grey-text">
            <span class="green-text"><b><%= @user.name %></b></span>
            <% if !@user.description.nil? %> 
              <%= @user.description %>
            <% else %>
              is an amazing artist who offers their work to the world.</span>
            <% end %>
            </span>
                </div>
      </div>
    </div>
  </div>
</div>


<div class="container max-width">
<div class="section" id="fade-1">
<div class="row">       
 <% if @user.paints.count != 0 %>
  <div class="row">
    <% @user.paints.each do |paint| %>
      <a href="#<%= paint.id %>" class="modal-trigger">
        <div class="col s12 m6">
        <div class="card small">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag paint.paint.url(:medium) %>
          </div>
          <div class="card-content">
            <span class="card-title grey-text text-darken-3">
              <%= paint.title %>
            </span><br>
            <span class ="green-text text-darken-2">$<%= number_with_precision(paint.price, :precision => 2) %></span> / 
            <span class ="green-text text-darken-2"><%= paint.week %> week</span> / 
            <span class ="green-text text-darken-2"><%= paint.pieces %> pieces</span>    
          </div>      
        </div>      
        </div>
      </a>
    <% end %>
  </div>
<% else %>
<div align="center"><span class="grey-text">
  <b><%= @user.name %></b> hasn't uploaded anything yet. Come back in the future!
  </span>
</div>
<% end %>
</div>
</div>
</div>

<% if @user.paints.count != 0 %>
  <% @user.paints.each do |paint| %>
    <div id="<%= paint.id %>" class="modal modal-art">
      <div class="modal-content">
          <center>
             <%= image_tag paint.paint, class:"responsive-artwork" %>
            <br>
          </center><div class="row">
          <b><%= paint.title %></b> by <i><%= @user.name %></i><br>$USD <%= paint.price %><br>
            <%= paint.description %>
        </div>
        </div>
        <div class="modal-footer">
          <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
          <a href="#commissionme" class="modal-trigger modal-close waves-effect waves-green btn-flat">Commission</a>
        </div>
    </div>
  <% end %>
<% end %>

 <div id="commissionme" class="modal modal-art">
    <div class="modal-content">
      <div class="input-field"><input placeholder="Your name" id="Name" type="text" class="validate"></div>
      <div class="input-field"><input placeholder="Your email address" id="email" type="text" class="validate"></div>
      <div class="input-field">
        <textarea id="text" class="materialize-textarea"></textarea>
        <label for="textarea1">A description of your commission request. Don't leave out any details!</label>
      </div>
       <input type="checkbox" class="filled-in" id="securetrans" checked="checked" />
      <label for="securetrans">Make this a <b>secure transaction</b></label> 
      <a class="modal-trigger" href="#explain">What's this?</a>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Commission</a>
    </div>
  </div>
  
  <div id="explain" class="modal">
    <div class="modal-content" align="center">
      A secure transaction means that the request will
      be handled through the site. We will give you an ID so you can check on the progress
      of your commission, and we'll withhold the payment to the artist until you've indicated
      that it's completed. Should anything happen, we will reimburse you. There's a transaction fee of 8%. 
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>